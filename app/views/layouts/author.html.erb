<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:page_title) %> | Overwatched</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=5gncyalxwiyt32g3xbcta7ln2g5810lkw8p0oc7128d8vnlv"></script>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <div class="container <%= controller_name %> <%= action_name %>">

      <% if flash.any? %>
        <% flash.keys.each do |key| %>
          <% alert_type = key.to_s %>
          <% if alert_type = 'notice' %>
            <% alert_type = 'info' %>
          <% end %>
          <div class="alert alert-<%= alert_type %> alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= flash[key] %>
          </div>
        <% end %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
