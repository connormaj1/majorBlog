    </script>

    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>
  <%= render 'layouts/navbar' %>
    <div class="container-fluid <%= controller_name %> <%= action_name %>" >
      <%= yield %>
    </div>

  </body>
</html>
